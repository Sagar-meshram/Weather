{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "../dist-electron",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["*.ts", "electron.d.ts", "ConfigHelper.ts", "../src/types/electron.d.ts"]
}
